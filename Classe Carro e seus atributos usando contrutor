//criacao da classe carro com suas propriedades/atributos (marca,cor e ano) que sao inicializadas diretamente pelo construtor da classe Carro.
  class Carro (var marca: String, var cor:String, var ano:Int){ 
      var ligado: Boolean = false  
      var velocidade: Int = 350 
  
      fun ligar(){ 
      if(!ligado){ 
      println("carro ligado") 
      ligado = true 
      } 
      else{ 
      println("o carro j√° ta ligado") 
      } 
     } 
  
     fun acelerar(){ 
     velocidade = velocidade + 5 
     } 
  } 
  
   
